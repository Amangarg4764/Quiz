<style>
    *{
        margin: 0px;
        padding: 0px;
    }
    .per{
        text-align: left!important;
    }
</style>
<div class="container my-4">
    <div class="jumbotron">
<h1 class="text-info text-center"><center>ALL Question</center></h1>
<% var s=1%>
<% for(i of data) { %>
    <p class="per">Question <%=s++%> : <%=  i.questionstatement %>
    <br>Option1 : <%=  i.option1 %>
    <br>Option2 : <%=  i.option2 %>
    <br>Option3 : <%=  i.option3 %>
    <br>Option4 : <%=  i.option4 %>
    <span  class="text-success"><br>Answer : <%=  i.answer %></span></p>
<%}%>
    </div></div>